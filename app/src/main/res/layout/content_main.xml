<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="avi.singh.qr_code.MainActivity"
    tools:showIn="@layout/activity_main">


    <br.com.bloder.magic.view.MagicButton
        android:id="@+id/magic_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:magic_button_size="50dp"
        app:button_icon="@drawable/ic_fingerprint_black_24dp"
        app:button_icon_width="25dp"
        app:button_icon_height="25dp"
        app:hide_text="Generated"
        app:hide_text_color="#ffffff"
        android:paddingTop="15dp"
        android:layout_below="@+id/edit_Text"
        android:layout_alignParentRight="true"
        android:paddingRight="10dp"
        app:icon_button_color="#f9f9f9"
        app:expandable_area_color="#060279"/>

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/edit_Text"
        android:paddingTop="10dp">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Credentials"
            android:textColorHint="@color/colorAccent"/>

    </android.support.design.widget.TextInputLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Credentials can be text, Urls or links"
        android:layout_below="@id/edit_Text"

        android:textSize="12dp"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/magic_button"
        android:paddingTop="5dp"/>

    

</RelativeLayout>
